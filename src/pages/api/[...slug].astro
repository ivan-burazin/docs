---
import { getCollection } from 'astro:content'
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro'
import { getStarlightDocumentData } from '@astrojs/starlight/utils/routing'

export async function getStaticPaths() {
  const apiPages = await getCollection('api')
  return apiPages.map(page => ({
    params: { slug: page.slug },
    props: { page },
  }))
}

const { page } = Astro.props
const { Content } = await page.render()
const documentData = await getStarlightDocumentData({
  id: `api/${page.id}`,
  slug: `api/${page.slug}`,
  lang: 'en',
})
---

<StarlightPage frontmatter={page.data} {...documentData}>
  <Content />
</StarlightPage>
